extends layout

block content

  div(id="wrapper")
    center
      div(class="header")
        div(id="centering")
          input(type = "checkbox" id=togglewolf v-model = "seeme.wolfmsg" value = "wolfmsg")
          label {{vis}} Wolves
          input(type = "checkbox" id=togglecoven  v-model = "seeme.covenmsg" value = "covenmsg")
          label {{vis}} Coven
          input(type = "checkbox" id=togglevamp v-model = "seeme.vampnmsg" value = "vampnmsg")
          label {{vis}} Vamp
          input(type = "checkbox" id=togglemason  v-model = "seeme.masonmsg" value = "masonmsg")
          label {{vis}} Mason
          input(type = "checkbox" id=toggledemon  v-model = "seeme.demonmsg" value = "demonmsg")
          label {{vis}} Demons
          input(type = "checkbox" id=togglesaltmine  v-model = "seeme.ghostmsg" value = "ghostmsg")
          label {{vis}} Saltmine
          input(type = "checkbox" id=togglevillage  v-model = "seeme.villagemsg" value = "villagenmsg")
          label {{vis}} Village
        div(id= "gameselector")
          select(id="getgame" v-model = "game")
            -for(var i = 35;i<105;i++){
              -if(i <100) {
                option(value="ext-0#{i}") EXT-0#{i}
              -}
              -else {
                option(value="ext-#{i}") EXT-#{i}
                -}
              -}
            -for(var i = 3;i<19;i++){
              -if(i <10) {
                option(value="spd-00#{i}") SPD-00#{i}
                -}
              -else {
                option(value="spd-0#{i}") SPD-0#{i}
                -}
              -}

    loading(v-if="currentView == 'loading'")
    game(v-if="currentView == 'game'", :seeme="seeme")

  script(src="/client.js").
